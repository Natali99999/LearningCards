<BorderPane fx:id="borderPane" prefHeight="493.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AppController">
   <right>
      <VBox prefHeight="200.0" prefWidth="130.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="30.0" prefWidth="64.0">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/toGo.jpg" />
                     </image>
                  </ImageView>
                  <Label fx:id="learnCardCount" alignment="CENTER" prefHeight="30.0" prefWidth="36.0" text="Label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="64.0">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/wrong.jpg" />
                     </image>
                  </ImageView>
                  <Label fx:id="wrongCardCount" alignment="CENTER" prefHeight="30.0" prefWidth="36.0" text="Label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="64.0">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/correct.jpg" />
                     </image>
                  </ImageView>
                  <Label fx:id="correctCardCount" alignment="CENTER" prefHeight="30.0" prefWidth="36.0" text="Label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
         </children>
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </VBox>
   </right>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Select a Theme">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <ListView fx:id="themeList" fixedCellSize="40.0" opacity="0.96" prefHeight="500.0" prefWidth="300.0" />
         </children>
      </VBox>
   </left>
   <center>
      <ScrollPane prefHeight="302.0" prefViewportHeight="400.0" prefViewportWidth="350.0" prefWidth="761.0" styleClass="card" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <content>
            <VBox prefHeight="400.0" prefWidth="370.0">
               <children>
                  <Label fx:id="labelTheme" prefHeight="20.0" prefWidth="100.0" text="Label">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="15.0" top="30.0" />
                     </padding>
                  </Label>
                  <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets right="20.0" />
                     </VBox.margin>
                  </TextArea>
                  <HBox accessibleText="Learn" alignment="TOP_CENTER" prefHeight="50.0" spacing="20.0">
                     <children>
                        <Button fx:id="btnCardResultWrong" mnemonicParsing="false" onAction="#onBtnResultClicked">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/btnWrong.jpg" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="btnCardResultCorrect" mnemonicParsing="false" onAction="#onBtnResultClicked">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/btnCorrect.jpg" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="btnChangeSide" accessibleRole="IMAGE_VIEW" accessibleText="go" mnemonicParsing="false" onAction="#onMouseClicked" prefHeight="59.0" prefWidth="57.0">
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                           <graphic>
                              <ImageView fitHeight="42.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/learn.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
                  <Pagination fx:id="pagination" />
               </children>
               <padding>
                  <Insets left="30.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <top>
      <ToolBar prefHeight="59.0" prefWidth="495.0" BorderPane.alignment="CENTER">
        <items>
            <Button mnemonicParsing="false" onAction="#onAddNewTheme" text="Add theme" />
          <Button mnemonicParsing="false" onAction="#onRemoveTheme" text="Remove theme" />
            <HBox prefHeight="43.0" prefWidth="95.0">
               <children>
                  <ToggleButton fx:id="btnLevel1" contentDisplay="TOP" mnemonicParsing="false" onAction="#onBtnLevelClicked" prefHeight="40.0" prefWidth="70.0" text="Level 1">
                     <graphic>
                        <ImageView fx:id="imageLevel1" fitHeight="28.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/level2.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </ToggleButton>
                  <Label fx:id="labelLevel1" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="43.0" prefWidth="95.0">
               <children>
                  <ToggleButton fx:id="btnLevel2" contentDisplay="TOP" mnemonicParsing="false" onAction="#onBtnLevelClicked" prefHeight="40.0" prefWidth="70.0" text="Level 2">
                     <graphic>
                        <ImageView fx:id="imageLevel2" fitHeight="28.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/level3.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </ToggleButton>
                  <Label fx:id="labelLevel2" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="43.0" prefWidth="95.0">
               <children>
                  <ToggleButton fx:id="btnLevel3" contentDisplay="TOP" mnemonicParsing="false" onAction="#onBtnLevelClicked" prefHeight="40.0" prefWidth="70.0" text="Level 3">
                     <graphic>
                        <ImageView fx:id="imageLevel3" fitHeight="28.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/level4.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </ToggleButton>
                  <Label fx:id="labelLevel3" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="43.0" prefWidth="95.0">
               <children>
                  <ToggleButton fx:id="btnLevel4" contentDisplay="TOP" mnemonicParsing="false" onAction="#onBtnLevelClicked" prefHeight="40.0" prefWidth="70.0" text="Level 4">
                     <graphic>
                        <ImageView fx:id="imageLevel4" fitHeight="28.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/level5.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </ToggleButton>
                  <Label fx:id="labelLevel4" text="0">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="btnStart" contentDisplay="TOP" mnemonicParsing="false" onAction="#onBtnStart" prefHeight="40.0" prefWidth="80.0" styleClass="buttonStart" stylesheets="@application.css" text="Start">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
        </items>
         <BorderPane.margin>
            <Insets left="100.0" />
         </BorderPane.margin>
      </ToolBar>
   </top>
</BorderPane>
